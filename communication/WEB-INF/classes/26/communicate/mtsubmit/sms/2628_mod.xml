<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="mtsGatewayModule2628" class="com.lxt2.gateway.sms.module.SmsGatewayModule">
		<property name="id" value="2628"/>
		<property name="name" value="下行发送CMPP30"/>
		<property name="hub" ref="hubImpl"/>
		<property name="submitQueue" ref="mtsSubmitQueue2628"/>
		<property name="adapter" ref="mtsPersistentSubmitQueueAdapter2628"/>
		<property name="gateway" ref="mtsCmpp30Gateway2628"/>
		<property name="status" value="STOP"/>
		<property name="configList">
			<list>
				<ref bean="mtsCmpp30Parameter2628"/>
				<ref bean="mtsCmpp30DeliverAdapter2628"/>
			</list>
		</property>
		<!-- 命令集合 -->
		<property name="controlCmdMap">
			<map>
				<entry key="qePerf" value-ref="mtsQueueCmd2628"/>
                <entry key="view" value-ref="mtsGateWayViewCmd2628"/>
			</map>
		</property>
		<!-- 指标集合 -->
		<property name="kpiList">
			<list>
				<ref bean="mtsQueueKPI2628"/>
				<ref bean="mtsGateWayModuleKPI2628"/>
			</list>
		</property>
	</bean>

	<!-- 模块的指标配置 -->
	<bean id="mtsQueueKPI2628" class="com.lxt2.queuekc.QueueKPI">
		<property name="queue" ref="mtsSubmitQueue2628"/>
	</bean>
	<!-- 模块的命令配置 -->
	<bean id="mtsQueueCmd2628" class="com.lxt2.queuekc.QueuePerfCmd">
		<property name="kpiQueueList">
			<list>
				<ref bean="mtsQueueKPI2628"/>
			</list>
		</property>
	</bean>

	<bean id="mtsSubmitQueue2628" class="com.lxt2.queuekc.CacheQueue" destroy-method="destroy">
		<property name="cache">
			<bean class="ihandy.lxt20.persist.cache.FCCache" destroy-method="close"/>
		</property>
		<property name="queueName" value="mtsSubmit2628"/>
	</bean>
	
	<bean id="mtsPersistentSubmitQueueAdapter2628" class="com.lxt2.gateway.sms.queue.PersistentSubmitQueueAdapter">
		<property name="cacheQueue" ref="mtsSubmitQueue2628"/>
		<property name="hub" ref="hubImpl"/>
		<property name="spliterMap" ref="mtsSpliterMap2628"/>
		<property name="config" ref="mtsCmpp30GatewayConfig2628"/>
	</bean>
	<bean id="mtsPersistentRespQueueAdapter2628" class="com.lxt2.gateway.sms.queue.PersistentRespQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="config" ref="mtsCmpp30GatewayConfig2628"/>
		<property name="saveLogger" ref="saveLogger"/>
		<property name="sid" ref="ndSid"/>
	</bean>
	<bean id="mtsPersistentReportQueueAdapter2628" class="com.lxt2.gateway.sms.queue.PersistentReportQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="reportAdapter" ref="mtsCmpp30reportAdapter2628"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsCmpp30GatewayConfig2628"/>
	</bean>
	<bean id="mtsPersistentDeliverQueueAdapter2628" class="com.lxt2.gateway.sms.queue.PerisitentDeliverQueueAdapter">
		<property name="hub" ref="hubImpl" />
		<property name="deliverAdapter" ref="mtsCmpp30DeliverAdapter2628"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsCmpp30GatewayConfig2628"/>
	</bean>
    <bean id="mtsGateWayModuleKPI2628" class="com.lxt2.gateway.sms.module.SmsGatewayModuleKPI">
        <property name="cacheQueue" ref="mtsSubmitQueue2628"/>
        <property name="dataGather" ref="mtsDataGather2628"/>
        <property name="module" ref="mtsGatewayModule2628"/>
    </bean>
    <bean id="mtsDataGather2628" class="com.lxt2.gateway.sms.GatewayDataGather" init-method="init" destroy-method="destroy">
    	<property name="path" value="${CLASSPATH}/${nodeID}/persistent/statistics/gateway2628.properties"/>
    </bean>
    <!-- 获取模块的监视信息 -->
	<bean id="mtsGateWayViewCmd2628" class="com.lxt2.base.module.ModuleKPICmd">
		<property name="kpi" ref="mtsGateWayModuleKPI2628"/>
	</bean>
	
	<!-- 拆分抽象bean -->
	<bean id="mtsAbstractSpliter2628" abstract="true" lazy-init="true">
		<property name="nodeGatewayID" value="${nodeID}" />
		<property name="gatewayId" ref="gatewayId2628"/>
		<property name="gatewayXmlParser" ref="gatewayXml"/>
	</bean>
	<bean id="mtsSpliterMap2628" class="java.util.HashMap" scope="prototype">
		<constructor-arg index="0">
			<map>
				<entry key="15">
					<!-- 普通短信拆分类 -->
					<bean class="com.techcenter.spliter.CommSmsSpliter"  parent="mtsAbstractSpliter2628" >
						<property name="smSplit">
							<bean class="com.techcenter.spliter.SMSplit" />
						</property>
					</bean>
				</entry>
				<entry key="31">
					<!-- wappush拆分类 -->
					<bean class="com.techcenter.spliter.WapPushSpliter" />
				</entry>
				<entry key="32">
					<!-- 长短信拆分类 -->
					<bean class="com.techcenter.spliter.LongSmsSpliter"  parent="mtsAbstractSpliter2628" />
				</entry>
			</map>
		</constructor-arg>
	</bean>
</beans>
